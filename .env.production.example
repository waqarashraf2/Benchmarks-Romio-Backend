# ═══════════════════════════════════════════
# PRODUCTION ENVIRONMENT CONFIG
# ═══════════════════════════════════════════

APP_NAME="Benchmark Management System"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_URL=https://benchmark.yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ══════════ DATABASE ══════════
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=benchmark_production
DB_USERNAME=benchmark_user
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# ══════════ SESSIONS ══════════
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ══════════ CACHE & QUEUE ══════════
CACHE_STORE=redis
CACHE_PREFIX=benchmark_

QUEUE_CONNECTION=redis

FILESYSTEM_DISK=local

# ══════════ REDIS ══════════
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# ══════════ MAIL ══════════
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@benchmark.com"
MAIL_FROM_NAME="${APP_NAME}"

# ══════════ CORS ══════════
SANCTUM_STATEFUL_DOMAINS=benchmark.yourdomain.com
CORS_ALLOWED_ORIGINS=https://benchmark.yourdomain.com

# ══════════ FRONTEND ══════════
FRONTEND_URL=https://benchmark.yourdomain.com

# ══════════ MONITORING (Optional) ══════════
# SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id
# SCOUT_DRIVER=meilisearch
